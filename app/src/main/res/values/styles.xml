<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mButton" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGuess</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button2</item>
    </style>

    <style name="mAnswer" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="startCustomBtn" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button3</item>
    </style>

    <style name="ShadowText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">20</item>
    </style>

</resources>
